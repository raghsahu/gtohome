<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:padding="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                style="@style/text_14_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_criteria" />


            <EditText
                android:id="@+id/inward_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/edit_text_bg"
                android:hint="@string/keywords"
                android:inputType="text"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/rectangle_bg_solid_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            >

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/all_category"
                android:padding="@dimen/_5sdp"
                >
            </Spinner>

        </LinearLayout>

        <CheckBox
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/text_12_black"
            android:text="@string/search_in_subcategories"
            >

        </CheckBox>

        <CheckBox
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/text_12_black"
            android:text="@string/search_product_desc"
            >

        </CheckBox>


        <TextView
            android:id="@+id/tv_continue"
            android:background="@drawable/rectangle_bg_solid"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            style="@style/text_12_black"
            android:text="@string/search"
            android:layout_width="@dimen/_100sdp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            >
        </TextView>

        <TextView
            style="@style/text_16_black"
            android:layout_width="match_parent"
            android:padding="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:text="@string/product_meet_search_criteria" />



    </LinearLayout>






</LinearLayout>

</layout>