<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="featureAdapter"
            type="com.grocery.gtohome.adapter.CategoryProduct_Adapter" />
    <variable
            name="reviewAdapter"
            type="com.grocery.gtohome.adapter.Review_Adapter" />

    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_product_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:background="@drawable/rectangle_bg_border"
                android:src="@drawable/placeholder_image">

            </ImageView>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_pro_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/text_16_black"
                    android:textStyle="bold"
                    android:text=""
                    android:padding="@dimen/_5sdp"
                    >
                </TextView>

                <LinearLayout
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RatingBar
                        style="@style/customRatingBar"
                        android:layout_gravity="center"
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:saveEnabled="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:numStars="5"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/tv_reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_14_black"
                        android:textStyle="bold"
                        android:text=""
                        android:layout_marginEnd="@dimen/_10sdp"
                        tools:ignore="RtlSymmetry">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_weight="0.5"
                        android:id="@+id/tv_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/text_16_black"
                        android:textStyle="bold"
                        android:text=""
                        android:padding="@dimen/_5sdp"
                        >
                    </TextView>

                    <TextView
                        android:layout_weight="0.5"
                        android:id="@+id/tv_special_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/text_16_black"
                        android:textStyle="bold"
                        android:text=""
                        android:padding="@dimen/_5sdp"
                        >
                    </TextView>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_12_black"
                        android:text="@string/product_code_"
                        android:padding="@dimen/_5sdp"
                        >
                    </TextView>

                    <TextView
                        android:id="@+id/tv_procode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_12_black"
                        android:text=" "
                        android:padding="@dimen/_5sdp"
                        >
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_12_black"
                        android:text="@string/reward_point_"
                        android:padding="@dimen/_5sdp"
                        >
                    </TextView>

                    <TextView
                        android:id="@+id/tv_reward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_12_black"
                        android:text="0"
                        android:padding="@dimen/_5sdp"
                        >
                    </TextView>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_stock_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/text_12_black"
                    android:text="In Stock"
                    android:textColor="@color/colorAccent"
                    android:padding="@dimen/_5sdp"
                    >
                </TextView>


                <View
                    android:layout_width="match_parent"
                    android:background="@color/light_white"
                    android:layout_height="@dimen/_1sdp">
                </View>

                <LinearLayout
                    android:id="@+id/ll_spin"
                    android:background="@drawable/rectangle_border"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    >
                    <Spinner
                        android:id="@+id/spinner_qty"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:padding="@dimen/_5sdp"
                        >
                    </Spinner>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/tv_add_cart"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="0.5"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:gravity="center"
                    style="@style/textview14white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:text="@string/add"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableStart="@drawable/ic_cart"
                    android:textAlignment="center"
                    android:textStyle="normal">
                </TextView>

                <LinearLayout
                    android:id="@+id/ll_wishlist"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/rectangle_bg_solid"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        app:srcCompat="@drawable/productheart"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp">

                    </ImageView>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/text_16_black"
                    android:layout_width="match_parent"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Check Availability" />

                <View
                    android:background="@color/light_white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp">
                </View>


                <LinearLayout
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_14_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter Pincode" />


                    <EditText
                        android:id="@+id/et_pincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:inputType="text"
                        android:hint="Pincode"
                        android:background="@drawable/edit_text_bg"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_check_avail"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:background="@drawable/rectangle_bg_primary"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    style="@style/textview12white"
                    android:text="Check availability of products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:padding="@dimen/_5sdp"
                    style="@style/text_14_black"
                    android:textStyle="bold"
                    android:text="@string/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                </TextView>

                <View
                    android:background="@color/light_white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp">
                </View>

                <TextView
                    android:id="@+id/tv_pro_desc"
                    android:padding="@dimen/_5sdp"
                    style="@style/text_12_black"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_review_text"
                    android:padding="@dimen/_5sdp"
                    style="@style/text_14_black"
                    android:textStyle="bold"
                    android:text="Reviews (0)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                </TextView>

                <View
                    android:background="@color/light_white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp">
                </View>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:adapter="@{reviewAdapter}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                >
            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/text_16_black"
                    android:layout_width="match_parent"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Write A Review" />

                <View
                    android:background="@color/light_white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp">
                </View>


                <LinearLayout
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_14_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/your_name" />


                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:inputType="text"
                        android:hint="@string/your_name"
                        android:background="@drawable/edit_text_bg"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_14_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Review" />


                    <LinearLayout
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/edit_text_bg"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <EditText
                            android:windowSoftInputMode="stateAlwaysVisible"
                            android:overScrollMode="always"
                            android:scrollbarStyle="insideInset"
                            android:scrollbars="vertical"
                            android:singleLine="false"
                            android:isScrollContainer="true"
                            android:focusable="true"
                            android:id="@+id/et_review"
                            android:hint="Your Review"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="textStart"
                            android:layout_gravity="start"
                            android:gravity="start"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:inputType="textMultiLine"
                            android:background="@null"
                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_14_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating" />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_margin="10dp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_review_submit"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:background="@drawable/rectangle_bg_primary"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    style="@style/textview12white"
                    android:text="@string/submit"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    >
                </TextView>

            </LinearLayout>

        <LinearLayout
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:padding="@dimen/_5sdp"
                style="@style/text_14_black"
                android:textStyle="bold"
                android:text="@string/related_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </TextView>

            <View
                android:background="@color/light_white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp">
            </View>

        </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:adapter="@{featureAdapter}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                app:spanCount="2"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                >
            </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:visibility="gone"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:padding="@dimen/_5sdp"
                style="@style/text_14_black"
                android:textStyle="bold"
                android:text="@string/testimonial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </TextView>

            <View
                android:background="@color/light_white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp">
            </View>

        </LinearLayout>


            <androidx.viewpager.widget.ViewPager
                android:visibility="gone"
                android:layout_margin="@dimen/_5sdp"
                android:layout_gravity="center"
                android:id="@+id/slider_pager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:background="@drawable/squere_transparent_bg"
                 />

            <LinearLayout
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                >

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>


</layout>